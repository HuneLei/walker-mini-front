/* 已选员工弹出框操作 */
.modal_dialog {
  background-color: #ffffff;
}

.modal_dialog .scroll_view {
  max-height: 65vh;
  min-height: 35vh;
}

.modal_dialog .heard {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  height: 96rpx;
  line-height: 42rpx;
  justify-content: center;
  position: relative;
  padding: 30rpx 30rpx 24rpx 30rpx;
  grid-template-columns: repeat(3, 33.33%);
}

.modal_dialog .heard .title {
  color: var(--text-title);
  font-weight: 500;
}

.modal_dialog .heard .button {
  position: absolute;
  color: var(--theme);
  right: 32rpx;
  top: 3rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
}

.modal_dialog .heard .close {
  width: 44rpx;
  height: 44rpx;
}