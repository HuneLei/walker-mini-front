.cut_item {
  background-color: #ffffff;
  padding: 24rpx 0;
}

.left_view {
  font-size: 32rpx;
  line-height: 48rpx;
  color: var(--text-info);
}

.cut_item .frame_heard {
  display: flex;
  justify-content: space-between;
}

.cut_item .frame_heard .hint {
  display: flex;
  align-items: center;
}

.content {
  font-size: 32rpx;
  line-height: 48rpx;
  color: var(--text-title) !important;
}

.placeholder {
  font-size: 32rpx;
  line-height: 48rpx;
  color: var(--text-details);
}


.frame_heard .arrows::after {
  content: " ";
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
  box-sizing: border-box;
  background-size: 100% 100%;
  background-image: url("data:image/png;base64,")
}