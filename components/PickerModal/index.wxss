/* 已选员工弹出框操作 */
.modal_dialog {
  background-color: #ffffff;
}

.modal_dialog .scroll_view {
  width: 100%;
}

.modal_dialog .heard {
  display: grid;
  font-size: 30rpx;
  height: 96rpx;
  line-height: 42rpx;
  padding: 30rpx 30rpx 24rpx 30rpx;
  grid-template-columns: repeat(3, 33.33%);
}

.modal_dialog .heard .title {
  grid-column-start: 2;
  color: var(--text-title);
  font-weight: 500;
}

.modal_dialog .heard .button {
  grid-column-start: 3;
  text-align: end;
  color: var(--theme);
}