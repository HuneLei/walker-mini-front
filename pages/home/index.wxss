/* 顶部背景 */
.home_page .top_background {
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 342rpx;
  position: fixed;
  z-index: -1;
  background: linear-gradient(180deg, rgba(12, 106, 255, 0.12) 0%, rgba(250, 251, 254, 0.05) 100%);
}

/* 顶部导航栏 */
.home_page .bar_transparent {
  background-color: transparent;
}

.home_page .cu-custom .nav_custom {
  height: 100%;
  display: flex;
  align-items: center;
  padding-top: 4rpx;
}

.home_page .nav_custom .nav_image {
  height: 60rpx;
  width: 316rpx;
}

/* 数据展示和记录 */
.home_page .data_show {
  padding: 28rpx 24rpx 24rpx 24rpx;
  border-radius: 16rpx;
  background-color: var(--white);
}

.data_show .switch_box {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-bottom: 20rpx;
}

.data_show .foot_modal {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-top: 24rpx;
}

/* 排行榜 */
.ranking {
  padding: 24rpx 24rpx 0 24rpx;
}

.ranking .rank_view {
  display: flex;
}

.ranking .rank_view .rank_item {
  flex: 1;
}

.ranking .ranking_list {
  padding: 32rpx 24rpx 28rpx 24rpx;
  border-radius: 16rpx;
  background-color: var(--white);
}

.ranking_list_heard {
  display: flex;
  align-items: center;
  padding-bottom: 38rpx;
}

.ranking_list_heard .title {
  color: var(--text-title);
  line-height: 44rpx;
  font-size: 32rpx;
  margin-right: 12rpx;
  font-weight: 500;
}

.ranking_list .warning_image {
  height: 44rpx;
  width: 44rpx;
}

/* 快捷功能 */
.function_list {
  display: flex;
}

.function_list .image {
  width: 64rpx;
  height: 64rpx;
}

.function_list .function_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.function_list .function_item .title {
  color: var(--text-title);
  font-size: 24rpx;
  line-height: 34rpx;
  padding-top: 18rpx;
}

/* 资讯列表 */
.home_page .quality_list {
  padding: 24rpx 24rpx 0 24rpx;
}

.home_page .quality_list .right_more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-details);
  padding-right: 24rpx;
}

.home_page .quality_list .quality_view {
  background-color: #ffffff;
  border-radius: 16rpx;
}

.quality_view .catalog_card_list {
  padding: 0 24rpx;
}

.quality_list .quality_view .catalog_card {
  padding: 32rpx 0;
}

.quality_list .quality_view .quality_heard {
  display: flex;
  justify-content: space-between;
  background-color: transparent;
}

.quality_list .foot_modal {
  padding: 26rpx 0 40rpx 0;
  display: flex;
  justify-content: center;
}

.home_page .quality_list .tab_catalog {
  display: flex;
  align-items: center;
}

.quality_list .quality_tab {
  display: flex;
  align-items: center;
}

.quality_list .tab_catalog .tab_catalog_item {
  color: var(--text-title);
  padding: 0 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 44rpx;
}

.quality_list .quality_tab .tab_catalog .item_select {
  color: var(--theme);
  line-height: 44rpx;
  font-size: 32rpx;
  position: relative;
  transition: all 0.15s ease-in-out 0s;
}

.tab_catalog .tab_catalog_item.item_select::after {
  content: " ";
  width: 44rpx;
  height: 4rpx;
  position: absolute;
  bottom: -24rpx;
  border-radius: 30rpx;
  left: calc(50% - 22rpx);
  pointer-events: none;
  box-sizing: border-box;
  background-color: var(--theme);
}

.home_page .indicate_list {
  display: flex;
  flex-direction: column;
  justify-self: start;
  justify-content: start;
  padding: 24rpx 64rpx 0 64rpx;
  margin: -22rpx 0;
}

.home_page .indicate_list .item {
  margin: 22rpx 0;
}

.home_page .indicate_list .title {
  color: var(--text-title);
  font-size: 32rpx;
  text-align: start;
  font-weight: 500;
}

.home_page .indicate_list .content {
  color: var(--text-info);
  font-size: 28rpx;
  text-align: start;
  line-height: 42rpx;
  margin-top: 8rpx;
}